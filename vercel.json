{
    "functions": {
        "api/**": {
            "memory": 1024
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "access-control-allow-origin",
                    "value": "*"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/(.+)",
            "destination": "/api"
        }
    ]
}
